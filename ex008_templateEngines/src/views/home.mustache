<html lang="pt-BR">
<head>
    <title>Página Home</title>
</head>
<body>
    <h1>Título da página</h1>
    <hr>

    {{! conditionals }}
    {{#showWelcome}}
        <p>Opa {{ user.name }}{{#showOld}}, você já tem {{ user.age }} anos?{{/showOld}}</p>
    {{/showWelcome}}

    <p>Como vai a vida</p>

    <hr />

    <h2>Produtos</h2>

    {{!  loop}}
    <ul>
        {{#products}}
            <li>{{title}} - R${{price}}</li>
        {{/products}}
    </ul>

    <hr />

    {{! loop in a simple list }}
    <ul>
        {{#sentences}}
            <li>{{.}}</li>
        {{/sentences}}
        {{^sentences}} {{! if the list is empty}}
            Não há frases hoje.
        {{/sentences}}
    </ul>
</body>
</html>